<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CustomerAngkot" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@android:color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed" tools:ignore="NewApi">true</item>
    </style>

    <style name="textBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="textReguler">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textMedium">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="textButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomAlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Warna teks pesan -->
        <item name="android:textColorPrimary">@color/black</item>

        <!-- Warna teks tombol -->
        <item name="buttonBarPositiveButtonStyle">@style/CustomPositiveButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomNegativeButton</item>
    </style>

    <style name="CustomPositiveButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomNegativeButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <!-- pastikan semua atribut utama ikut -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>



</resources>
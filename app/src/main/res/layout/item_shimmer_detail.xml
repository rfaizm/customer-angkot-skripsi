<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:strokeColor="@android:color/transparent"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/shimmerBackground"
        android:padding="16dp">

        <ImageView
            android:id="@+id/image_angkot"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/shimmerContent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_trayek_angkot"
            android:layout_width="wrap_content"
            android:background="#DDDDDD"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Cicaheum - Ledeng"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/image_angkot"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_information_trayek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:text="Melewati Jln. Sudirman"
            android:textSize="12sp"
            android:background="@color/shimmerContent"
            app:layout_constraintStart_toEndOf="@+id/image_angkot"
            app:layout_constraintTop_toBottomOf="@+id/item_trayek_angkot" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>